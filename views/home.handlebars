{{#if username}}
    <div class="jumbotron">
        <p>Weather info</p>
    </div>
    <div class="panel panel-default">
        <div class="panel-heading">
            <h1 class="panel-title">Weather Information</h1>
            {{#if temperature}}
                    <h2 class="temp-in-city">{{city}}, {{state}}. Temp: {{temperature}} </h2>
            {{/if}}
            <button class="get-location">What's the weather like?</button>
        </div>
        <h2 class="lat-long"></h2>
        <div class="panel-body">

        </div>
    </div>

{{else}}
    <div class="jumbotron">
        <p>Sign in and view your profile!</p>
        <p>
            <a href="/signin" class="btn btn-primary btn-lg" role="button">
                <span class="glyphicon glyphicon-user"></span>
                Sign in!
            </a>
        </p>
    </div>

{{/if}}
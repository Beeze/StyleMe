<!-- views/signin.handlebars -->
<div class="jumbotron">
    <h1 style="text-align: center">Sign in</h1>
    <!--Used when an error occurs-->
    <h2>{{errorInfo}}</h2>

    <div class="signInArea">

        <button class="btn btn-warning btn-lg signInLocalButton">
            <span class="glyphicon glyphicon-user"></span> Sign In
        </button>
        <form class="userInfoForm" action="/login" method="POST">
            <p>
                <label>Username: </label>
                <input type="text" name="username"/><br>
                <label>Password: </label>
                <input type="password" name="password"/><br>
                <input type="submit" class="btn btn-primary btn-lg submitUserInfo" value="Log In"/><br>
            </p>
        </form>
    </div>
</div>
